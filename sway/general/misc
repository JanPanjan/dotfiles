### Output configuration
# names of your outputs: `swaymsg -t get_outputs`
output HDMI-A-1 pos 1920 0 res 1920x1080
output eDP1 pos 0 0 res 1920x1080

### Idle configuration
### NOTE: edit this with sed
exec swayidle -w \
         timeout 1000 'swaylock -f -i ~/.config/sway/wp/lockscreen-dark.png' \
         timeout 1500 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -i ~/.config/sway/wp/lockscreen-dark.png'

### Input configuration
# names of your inputs: `swaymsg -t get_inputs`
input "type:keyboard" {
	xkb_layout si
}

input "1267:12734:ELAN06FA:00_04F3:31BE_Touchpad" {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
}

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

